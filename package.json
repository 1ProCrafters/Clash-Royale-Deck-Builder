{
  "name": "deck-royale",
  "productName": "Gerador de Deck",
  "version": "1.0.0",
  "description": "A Deck Builder for Clash Royale game",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --icon=images/icon.ico --out=release-builds ",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --prune=true --icon=assets/icons/png/1024x1024.png --out=release-builds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LucasNaja/deck-royale.git"
  },
  "author": "LucasNaja",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LucasNaja/deck-royale/issues"
  },
  "homepage": "https://github.com/LucasNaja/deck-royale#readme",
  "devDependencies": {
    "electron": "^3.0.7",
    "electron-packager": "^12.2.0"
  }
}
